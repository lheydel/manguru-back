{
  "name": "manguru",
  "version": "0.1.0",
  "description": "impossiburuuu",
  "repository": {
    "type": "git",
    "url": "https://github.com/lheydel/manguru-back.git"
  },
  "author": "Luc Heydel",
  "license": "ISC",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "debug": "npm run build && npm run watch-debug",
    "serve": "node dist/src/server.js",
    "serve-debug": "nodemon --inspect=0.0.0.0:5858 dist/src/server.js",
    "test": "echo \"jest --forceExit --coverage --verbose\" && exit 0",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Typescript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Typescript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/src/server.js",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@types/node": "^11.13.4",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.11",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^3.4.3"
  }
}
