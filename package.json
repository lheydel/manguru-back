{
  "name": "manguru",
  "version": "0.0.1",
  "description": "impossiburuuu",
  "repository": {
    "type": "git",
    "url": "https://github.com/lheydel/manguru-back.git"
  },
  "author": "Luc Heydel",
  "license": "ISC",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "debug": "npm run watch-debug",
    "serve": "node dist/src/server.js",
    "serve-debug": "nodemon --inspect=0.0.0.0:5858 dist/src/server.js",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Typescript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Typescript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/src/server.js",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "^4.16.4",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/express": "^4.11.1",
    "@types/graphql": "^14.2.2",
    "@types/jest": "^24.0.15",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.13.4",
    "@types/supertest": "^2.0.7",
    "@types/ws": "^6.0.1",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^1.18.11",
    "prisma": "^1.34.0",
    "prisma-client-lib": "^1.34.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^3.4.3",
    "typescript-ioc": "^1.2.5"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "sonar-report.xml",
    "indent": 4
  }
}
