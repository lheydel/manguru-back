{
  "name": "manguru-back",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/lheydel/manguru-back.git"
  },
  "author": "Luc Heydel",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "-build": "npm run tslint && npm run build-ts",
    "build": "tsc",
    "build-ts": "tsc",
    "debug": "npm run watch-debug",
    "serve": "node dist/src/server.js",
    "serve-debug": "nodemon --inspect=0.0.0.0:5555 -d 1 dist/src/server.js",
    "test": "jest --forceExit --detectOpenHandles --coverage",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Typescript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-ts": "tsc -w",
    "watch-test": "jest --forceExit --detectOpenHandles --coverage --watch"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "mikro-orm": "^2.7.4",
    "mongodb": "^3.3.0-beta2",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.27",
    "@types/body-parser": "^1.17.0",
    "@types/bson": "^4.0.0",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.11.1",
    "@types/express-jwt": "0.0.42",
    "@types/graphql": "^14.2.2",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.13.4",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.7",
    "@types/ws": "^6.0.1",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^1.18.11",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^3.4.3",
    "typescript-ioc": "^1.2.5"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "sonar-report.xml",
    "indent": 4
  }
}
